{
  "name": "OTA-BE-Test",
  "version": "0.0.1",
  "description": "OTA Initial Coding Challenge",
  "type": "commonjs",
  "main": "src/bin/index.ts",
  "license": "MIT",
  "author": {
    "name": "Aaron Esugerra",
    "email": "aronesguerra0508@gmail.com"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.20.0",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "start": "ts-node build/bin/index.js",
    "clean": "rm -rf build",
    "build": "yarn clean && concurrently yarn:build:*",
    "build:compile": "rimraf dist",
    "build:types": "tsc",
    "dev": "yarn build && cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q build/bin/index.js\"",
    "dev:compile": "yarn build --watch",
    "dev:types": "tsc --watch",
    "typeorm": "typeorm-ts-node-commonjs",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint --ignore-path .eslintignore \"src/**/*.ts\" --fix",
    "lint:check": "eslint --ignore-path .eslintignore \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/compression": "1.7.5",
    "@types/cookie-parser": "1.4.6",
    "@types/cors": "2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "@typescript-eslint/parser": "7.0.1",
    "eslint": "8.56.0",
    "eslint-config-node": "4.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "compression": "1.7.4",
    "concurrently": "^8.2.2",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "helmet": "7.1.0",
    "husky": "9.0.11",
    "nodemon": "3.0.3",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "5.0.5",
    "typeorm": "0.3.20"
  }
}
